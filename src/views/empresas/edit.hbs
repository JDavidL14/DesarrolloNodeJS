<div class="container p-4"></div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Editar empresa</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{empresa.idEmpresa}}" method="post">

                    <div class="input-group mt-2">
                        <label for="idEmpresa" class="input-group-text">Código</label>
                        <input class="form-control" type="text" name="idEmpresa" id="idEmpresa" value="{{empresa.idEmpresa}}" disabled>
                    </div>

                    <div class="input-group mt-2">
                        <label for="nombre" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" value="{{empresa.nombre}}" placeholder="Nombre de la empresa" required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="direccion" class="input-group-text">Dirección</label>
                        <input class="form-control" type="text" name="direccion" id="direccion" value="{{empresa.direccion}}" placeholder="Dirección" required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="direccionfacturacion" class="input-group-text">Dirección Facturación</label>
                        <input class="form-control" type="text" name="direccionfacturacion" id="direccionfacturacion" value="{{empresa.direccionfacturacion}}" placeholder="Dirección de facturación">
                    </div>

                    <div class="input-group mt-2">
                        <label for="representantelegal" class="input-group-text">Representante Legal</label>
                        <input class="form-control" type="text" name="representantelegal" id="representantelegal" value="{{empresa.representantelegal}}" placeholder="Nombre del representante legal">
                    </div>

                    <div class="input-group mt-2">
                        <label for="telefono" class="input-group-text">Teléfono</label>
                        <input class="form-control" type="text" name="telefono" id="telefono" value="{{empresa.telefono}}" placeholder="Teléfono">
                    </div>

                    <div class="input-group mt-2">
                        <label for="correoelectronico" class="input-group-text">Correo Electrónico</label>
                        <input class="form-control" type="email" name="correoelectronico" id="correoelectronico" value="{{empresa.correoelectronico}}" placeholder="Correo electrónico">
                    </div>

                    <div class="input-group mt-2">
                        <label for="codigopostal" class="input-group-text">Código Postal</label>
                        <input class="form-control" type="text" name="codigopostal" id="codigopostal" value="{{empresa.codigopostal}}" placeholder="Código postal">
                    </div>

                    <div class="input-group mt-2">
                        <label for="estado" class="input-group-text">Estado</label>
                        <select class="form-control" name="estado" id="estado" required>
                            <option value="" disabled {{#if (eq empresa.estado "")}}selected{{/if}}>Seleccione un estado</option>
                            <option value="A" {{#if (eq empresa.estado 'A')}}selected{{/if}}>Activo</option>
                            <option value="I" {{#if (eq empresa.estado 'I')}}selected{{/if}}>Inactivo</option>
                            <option value="PEN" {{#if (eq empresa.estado 'PEN')}}selected{{/if}}>Pendiente</option>
                            <option value="DES" {{#if (eq empresa.estado 'DES')}}selected{{/if}}>Desactivado</option>
                            <option value="CAN" {{#if (eq empresa.estado 'CAN')}}selected{{/if}}>Cancelado</option>
                        </select>
                    </div>


                    <div class="input-group mt-2">
                        <label for="principal" class="input-group-text">Principal</label>
                        <select class="form-control" name="principal" id="principal" required>
                            <option value="" disabled {{#if (eq empresa.principal "")}}selected{{/if}}>Seleccione</option>
                            <option value="S" {{#if (eq empresa.principal 'S')}}selected{{/if}}>Sí</option>
                            <option value="N" {{#if (eq empresa.principal 'N')}}selected{{/if}}>No</option>
                        </select>
                    </div>


                    <div class="input-group mt-2">
                        <label for="adiciono" class="input-group-text">Adicionó</label>
                        <input class="form-control" type="text" name="adiciono" id="adiciono" value="{{empresa.adiciono}}" placeholder="Nombre del que agregó" required>
                    </div>

                    


                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Actualizar</button>
                    </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>