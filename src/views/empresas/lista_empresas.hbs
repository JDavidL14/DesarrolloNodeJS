<div class="container">
    <div class="row mt-2">
        <h3 class="text-center text-uppercase p-3">Lista de empresas</h3>
        {{#if empresas}}
        
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Codigo</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Direccion facturacion</th>
                        <th scope="col">Representante legal</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Correo electronico</th>
                        <th scope="col">Codigo postal</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Principal</th>
                        <th scope="col">Adiciono</th>
                        <th scope="col">Fecha adicion</th>
                        <th scope="col">Editar/Eliminar</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each empresas}}
                        <tr>
                            <td>{{ idEmpresa }}</td>
                            <td>{{ nombre }}</td>
                            <td>{{ direccion }}</td>
                            <td>{{ direccionfacturacion }}</td>
                            <td>{{ representantelegal }}</td>
                            <td>{{ telefono }}</td>
                            <td>{{ correoelectronico }}</td>
                            <td>{{ codigopostal }}</td>
                            <td>{{ estado }}</td>
                            <td>{{ principal }}</td>
                            <td>{{ adiciono }}</td>
                            <td>{{ fechaadicion }}</td>
                            <td>
                                <div>
                                    <a href="/edit/{{idEmpresa}}" class="p-2">
                                    <i class="fa-solid fa-pen-to-square" style="color: #514d1f;"></i></a>
                                    <a href="/delete/{{idEmpresa}}" class="p-2">
                                    <i class="fa-solid fa-user-minus" style="color: #691c1c;"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes registrar una empresa</h3>
                </div>
                <div class="card-body">
                    <p>Presiona para registrar una empresa</p>
                    <a href="/add" class="btn btn-primary">Registrar</a>
                </div>

        {{/if}}
    </div>
</div>